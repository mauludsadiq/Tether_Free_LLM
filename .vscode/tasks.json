{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cmake: configure",
      "type": "shell",
      "command": "cmake -S . -B build",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "cmake: build",
      "type": "shell",
      "command": "cmake --build build -j",
      "group": "build",
      "dependsOn": "cmake: configure",
      "problemMatcher": []
    },
    {
      "label": "ctest",
      "type": "shell",
      "command": "ctest --test-dir build --output-on-failure",
      "group": "test",
      "dependsOn": "cmake: build",
      "problemMatcher": []
    },
    {
      "label": "run: tether_demo",
      "type": "shell",
      "command": "./build/tether_demo",
      "group": "test",
      "dependsOn": "cmake: build",
      "problemMatcher": []
    }
  ]
}
